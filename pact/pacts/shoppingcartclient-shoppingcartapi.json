{
  "consumer": {
    "name": "ShoppingCartClient"
  },
  "provider": {
    "name": "ShoppingCartApi"
  },
  "interactions": [
    {
      "description": "a request for comments",
      "providerState": "i have a list of comments",
      "request": {
        "method": "GET",
        "path": "/comments",
        "headers": {
          "Accept": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": [
          {
            "email": "test@example.com",
            "comment": "test"
          }
        ],
        "matchingRules": {
          "$.body": {
            "min": 1
          },
          "$.body[*].*": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request for deleting comments",
      "providerState": "i will delete comments",
      "request": {
        "method": "DELETE",
        "path": "/comments"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
